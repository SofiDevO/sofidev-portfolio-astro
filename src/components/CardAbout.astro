---
import "../styles/about-home.css"
---

<div class="card__about">
    <div class="card-photo">
        <img class="about__img--src" src="./img/sofi4.webp" alt="" />
    </div>
    <div class="card-title">
        <p>SofiDev</p>
        <span>frontend Developer</span>
    </div>
    <div class="card-socials">
        <a
            class="card-socials-btn facebook"
            href="./documents/Angela_Sofia_Osorio_Cv_2023.pdf"
            target="_blank">
            <img class="about__icons" src="./svg/pdf-solid.svg" alt="" />
        </a>
        <a
            class="card-socials-btn"
            href="https://github.com/SofiDevO"
            target="_blank"
            rel="nofollow noreferrer noopener">
            <img
                class="about__icons"
                src="./svg/github-light.svg"
                alt="icono GitHub"
                data-name="Layer 21"
                id="Layer_21"
            />
        </a>
        <a
            class="card-socials-btn icon"
            href="https://www.linkedin.com/in/sofidev/"
            target="_blank"
            rel="nofollow noreferrer noopener">
            <img
                class="about__icons"
                src="./svg/linkedin.svg"
                alt="icono linkedin"
                data-name="Layer 21"
                id="Layer_21"
            />
        </a>
    </div>
</div>
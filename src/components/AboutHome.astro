---
import "../styles/components/about-home.css";
import Button from "./Button.astro";
import CardTerminal from "../layouts/CardTerminal.astro";
import CardAbout from "./CardAbout.astro";
import TitleSpan from "./TitleSpan.astro";
---

<section class="about" >
	<TitleSpan text1="Who is Sofi" span="Dev" text2="?" />
	<div class="about__container">
		<CardAbout />
		<div class="terminal__container">
			<CardTerminal>
				<h3 class="terminal__content terminal__content--h3">≥ Angela Sofía Osorio</h3>
				<p class="terminal__content terminal__content--p">≥ Javascript Fan 😍. Always looking for new skills to learn.</p>

				<h3 class="terminal__content terminal__content--h3">
					≥ What <span class="terminal__content terminal__content--span span__dark">sets me apart?</span>
				</h3>
				<p class="terminal__content terminal__content--p">
					≥ I genuinely <span class="terminal__content--span span__dark">love what I do! 💙</span> I
					believe that blending creativity and code can craft enchanting user
					experiences. <span class="terminal__content--span span__dark">
				</p>
				<div class="about__contactar">
					<Button href="/about" text="See more" />
				</div>
			</CardTerminal>
		</div>

	</div>
</section>

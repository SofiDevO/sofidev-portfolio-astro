<script>
	/* Boton "To top" */
	const d = document;
	const cajaToTop = d.querySelector(".to__top");

	/* Dar click en en la caja del btn "toTop*/
	cajaToTop.addEventListener("click", () => {
		window.location.href = "#";
	});

	const toTop = d.querySelector(".to__top");
	window.addEventListener("scroll", () => {
		if (window.pageYOffset > 500) {
			toTop.classList.add("active");
		} else {
			toTop.classList.remove("active");
		}
	});
</script>

<div class="menu__flotante">
	<div class="icon__top-container">
		<div class="to__top" data-menu="float">
			<a class="to__top-link" href="#"> </a>
			<i class="bi bi-arrow-up-circle"></i>
		</div>
	</div>
</div>
<style>
	/** @format */

	.menu__flotante {
		position: fixed;

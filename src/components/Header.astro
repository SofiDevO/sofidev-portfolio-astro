<style>
.header {
	display: flex;
    width: 100%;
    position: fixed;
    z-index: 50;
    top: 0;
    padding: 0 5rem;
    transition: all 0.9s;
    align-items: center;
    justify-content: center;
    z-index: 200;
    background: #000000be;
    backdrop-filter: blur(13px);
    -webkit-backdrop-filter: blur(13px);
    box-shadow: 0 5px 4px -2px rgba(0, 0, 0, 0.46);
}

.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
.header__logo {
	display: flex;
	justify-content: flex-start;
	font-weight: bold;
	font-size: 3rem;
	color: var(--seccond-color);
	font-family: 'Montserrat', sans-serif;
	transition: all 0.7s;
}
.header__logo,
.header__link:hover {
	cursor: pointer;
}

.header__logo span {
	color: var(--glow-blue);
}

.header__logo span:hover {
	color: var(--blue);
	filter: drop-shadow(0 0 12px var(--blue));
	cursor: default;
}

.header__link {
	text-decoration: none;
}








.menu__ul {
	display: flex;
    width: inherit;
    flex-direction: column;
    align-items: flex-start;
    height: 100vh;
    justify-content: flex-start;
	margin-top: 7rem;
	gap: 2.4rem;
}
.menu__avatar{
	width: 5rem;
	margin-bottom: 0;
}
/* TABLET VIEW */
@media screen and (min-width: 768px) {
	.header {
		padding: 0 1rem;
		justify-content: space-between;
	}

	.header__logo {
		display: flex;
		justify-content: flex-start;
		font-size: 2.2rem;
	}
	

	/* Menu desktop */
	.menu__nav {
		display: flex;
		flex-direction: row;
		align-items: center;
		/* position: relative; */
		transform: translateY(-200px);
		animation: appear 0.8s ease forwards;
		justify-content: flex-end;
		width: 89%;
	}

	.menu__ul {
		flex-direction: row;
		height: auto;
		gap: 0;
		padding: 0;
		justify-content: flex-end;
		margin-top: 0;
	}

	/* Animacion de entrada para los links del menu */
	@keyframes appear {
		0% {
			transform: translateY(-1400px);
		}
		100% {
			transform: translateY(0px);
		}
	}

	.menu__list {
		display: flex;
		list-style: none;
		cursor: pointer;
		text-shadow: -0.1rem 0rem 0rem var(--main-color);
		transition: 0.3s ease-in-out;
		padding: 0.6rem 1rem;
		color: var(--seccond-color);
		align-items: flex-end;
		transition: 0.5s ease-in-out;
	}

	.menu__list:hover {
		background-color: black;
		border-radius: 8px;
	}

	.menu__link {
		text-decoration: none;
		font-size: 1.8rem;
		font-weight: 500;
		color: var(--seccond-color);
	}
	.menu__link:hover {
		color: var(--blue);
		transform: scale(1.1);
	}
}

/* DESKTOP VIEW */
@media screen and (min-width: 1200px) {
	.header {
		padding: 0 7rem;
		justify-content: space-between;
		height: 9rem;
	}
	.header__logo {
		display: flex;
		justify-content: flex-start;
		font-size: 3.5rem;
	}
	.menu__ul {
		min-width: 127px;
		width: 100%;
		justify-content: flex-end;
	}
	.menu__list {
		padding: 0.6rem 1rem;
	}
	.menu__link{
		margin-left:2rem;
	}
}


---
import BaseHead from "../components/BaseHead.astro";
import ToogleDarkBtn from "../components/ToggleDarkBtn.astro";
import Footer from "../components/Footer.astro";
import DarkBg from "../components/DarkBg.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BtnToTop from "../components/BtnToTop.astro";
import "../styles/hero.css";

import CardsPostsHome from "../components/CardsPostsHome.astro";
import SecundaryMenu from "../components/SecundaryMenu.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<SecundaryMenu />
		<ToogleDarkBtn />
		<BtnToTop />
		<main>
			<section class="about__page">
				<CardsPostsHome />
			</section>
		</main>
		<DarkBg />
		<Footer />
		<style>
			.about__page {
				width: 100%;
				padding: 14rem 2rem 0 2rem;
				height: 100vh;
			}
		</style>
	</body>
</html>
